<?php
// Start session
session_start();

$host = 'localhost';
$username = 'root';
$password = ''; // empty password for default XAMPP
$database = 'food_ordering';
$port = 3307; // Change to 3306 if your MySQL uses default port

$conn = new mysqli($host, $username, $password, $database, $port);

// Check connection
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Handle form submission
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $username = trim($_POST["username"]);
    $password = password_hash(trim($_POST["password"]), PASSWORD_DEFAULT); // hash for security
    $gender = $_POST["gender"];
    $phone = trim($_POST["phone"]);
    $address = trim($_POST["address"]);

    // Check if username already exists
    $check = $conn->prepare("SELECT id FROM users WHERE username = ?");
    $check->bind_param("s", $username);
    $check->execute();
    $check->store_result();

    if ($check->num_rows > 0) {
        echo "<p style='color:red;'>Username already exists. Try another.</p>";
    } else {
        // Insert into DB
        $stmt = $conn->prepare("INSERT INTO users (username, password, gender, phone, address) VALUES (?, ?, ?, ?, ?)");
        $stmt->bind_param("sssss", $username, $password, $gender, $phone, $address);

        if ($stmt->execute()) {
            header("Location: login.php?signup=success");
            exit();
        } else {
            echo "<p style='color:red;'>Signup failed. Please try again.</p>";
        }
        $stmt->close();
    }
    $check->close();
    $conn->close();
}
?>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="signup.css">
</head>
<body>
    <form method="POST" action="signup.php">
        <h2>Signup Here</h2>

        <label>Username:</label><br>
        <input type="text" name="username" required><br><br>

        <label>Password:</label><br>
        <input type="password" name="password" required><br><br>

        <label>Gender:</label><br>
        <select name="gender" required>
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select><br><br>

        <label>Phone Number:</label><br>
        <input type="text" name="phone" required><br><br>

        <label>Address:</label><br>
        <textarea name="address" rows="4" cols="40" required></textarea><br><br>

        <button type="submit" name="Signup">Signup</button>
        <p>Already have an account? <a href="login.php">Login Here</a></p>
        <p><a href="forgotpass.php">Forgot your password?</a></p>
    </form>        
</body>
</html>
